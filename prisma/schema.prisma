generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  role Role @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Product {
  id Int @id @default(autoincrement())
  name String
  description String @default("") @db.Text
  price Decimal
  tags String @default("")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("products")
}